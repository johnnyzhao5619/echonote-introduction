{
  "name": "echonote-introduction",
  "version": "1.2.0",
  "description": "EchoNote 项目介绍页面 - 智能语音转录和日历管理桌面应用程序",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "keywords": [
    "echonote",
    "voice-transcription",
    "calendar-management",
    "desktop-application",
    "privacy-first",
    "local-processing"
  ],
  "author": "EchoNote Team",
  "license": "Apache-2.0",
  "homepage": "https://johnnyzhao5619.github.io/echonote-introduction",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnnyzhao5619/echonote-introduction.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "lint:check": "eslint . --cache",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky",
    "deploy:preview": "npm run build && npm run preview",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "sync:version": "node scripts/sync-version.js",
    "sync:version:force": "node scripts/sync-version.js --force",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:cross-browser": "playwright test tests/e2e/cross-browser-compatibility.spec.ts",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:seo": "playwright test tests/e2e/seo.spec.ts",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:local": "lhci autorun --config=.lighthouserc.local.json",
    "test:compatibility": "npm run test:cross-browser && npm run test:accessibility && npm run test:performance && npm run test:seo",
    "validate:translations": "npm run type-check && echo 'Translation validation integrated in development mode'",
    "optimize:images": "echo 'Image optimization integrated in build process'",
    "clean:cache": "rm -rf node_modules/.cache && rm -rf dist",
    "health:check": "npm run lint:check && npm run type-check && npm run test && npm run build"
  },
  "dependencies": {
    "@unhead/vue": "^2.0.19",
    "prismjs": "^1.30.0",
    "vue": "^3.5.22",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.11",
    "@types/prismjs": "^1.26.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.6",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.2",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.0",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^4.0.6",
    "vue-tsc": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,sass,less,styl,html,json,md}": [
      "prettier --write"
    ]
  }
}
